<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/layout_toast"
android:layout_width="200dp"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_margin="10dp"
android:padding="15dp"
android:layout_gravity="center_horizontal"
android:background="@drawable/custom_toast_style">

   <ImageView
       android:id="@+id/image_toast_icon"
       android:layout_width="50dp"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:layout_margin="10dp"
       android:contentDescription="@string/toast_icon"/>

   <TextView
       android:id="@+id/text_toast_message"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:layout_margin="10dp"
       android:textColor="#EC407A"
       android:textSize="18sp" />

</LinearLayout>